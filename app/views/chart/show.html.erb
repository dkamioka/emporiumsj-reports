<%= javascript_include_tag 'highcharts' %> <!--[if IE]> <%= javascript_include_tag 'excanvas.compiled' %> <![endif]-->
<%= javascript_include_tag 'highcharts_theme' %> <!--[if IE]> <%= javascript_include_tag 'excanvas.compiled' %> <![endif]-->
<% high_chart("my_id", @h) do |c| %>
  <%= raw "options.tooltip.formatter = function() { return '<b>'+ this.series.name +'</b><br/>'+ this.x +': R$'+ this.y;}" %>
  <%= raw "options.xAxis = { 
                  categories: #{@datas}, 
                  labels: { 
                    rotation: 90 
                    , align: 'right' 
                    , step: #{@datas.size/10 == 0 ? 1 : @datas.size/10}
                    , y: 120
                    }
          }"
        %>
  <%= "options.plotOptions = { 
                  column : { 
                    stacking: 'normal'
                    , dataLabels: {
                        enabled: false
                        , rotation: -90
                        , color: '#FFFFFF'
                        , align: 'right'
                        , x: -3
                        , y: 10
                        , formatter: function() {
                            return this.y
                        }
                        , style: {
                            font: 'normal 13px Verdana, sans-serif'
                        }
                      }
                    } 
          }" 
        %> 
  <%= "options.chart.zoomType = 'x'"  %>
  <%= "options.chart.spacingRight = 20" %>
<% end %> 
